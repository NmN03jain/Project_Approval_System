  <section class="upload1" id="upload">

    <div class="card">
      <h1>ADD YOUR PROJECT</h1>
      <div class="card-info">
        <h3 class="card-title">Card Title</h3>
        <p class="card-description">Card Description</p>
        <p class="card-files">Upload files</p>
        <button class="card-button" onclick="showDetails()">Upload Your Project</button>
      </div>
    </div>

    <div id="details" class="modal">

      <div class="modal-content">
        <form action="/main" method="post" enctype="multipart/form-data">
          <span class="close" onclick="hideDetails()">&times;</span>

          <label for="title">Title</label>
          <input name="title" class="title1"></input>

          <label for="description">description</label>
          <textarea class="description1" name="description" cols="30" rows="10"></textarea>

          <input type="file" class="fole" name="image" id="file-upload" required />

          <input type="submit" value="submit" class="btn btn-primary fle" />

        </form>
      </div>
    </div>
  </section>


  <% if (users !='' ) { %>
    <section class="table">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">ID</th>
            <th scope="col">Title Name</th>
            <th scope="col">Description</th>
            <th scope="col">File</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(row,index){ %>
            <tr>
              <th scope="row">
                <%= index %>
              </th>
              <td>
                <%= row.title %>
              </td>
              <td>
                <%= row.description %>
              </td>
              <td> <img src="<%= row.image %>" width="50px" alt=""> </td>
              <td>
                <a href="/edit/<%= row._id %>" class="text-success hel"><i class="fas fa-edit fa-lg mx-1"></i></a>
                <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </section>
    <% } else { %>
